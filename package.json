{
    "name": "teach-wipple",
    "private": true,
    "scripts": {
        "dev": "npm-run-all -p dev:*",
        "build": "run-s build:*",
        "dev:11ty": "eleventy --serve",
        "dev:index.css": "tailwindcss -i src/styles/index.css -o _site/styles/index.css --watch --postcss",
        "dev:slideshow.css": "tailwindcss -i src/styles/slideshow.css -o _site/styles/slideshow.css --watch --postcss",
        "build:11ty": "eleventy",
        "build:index.css": "tailwindcss -i src/styles/index.css -o _site/styles/index.css --postcss",
        "build:slideshow.css": "tailwindcss -i src/styles/slideshow.css -o _site/styles/slideshow.css --postcss"
    },
    "devDependencies": {
        "@11ty/eleventy": "^2.0.1",
        "@tailwindcss/typography": "^0.5.9",
        "autoprefixer": "^10.4.14",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.23",
        "tailwindcss": "^3.3.1"
    },
    "dependencies": {
        "@jamshop/eleventy-plugin-typography": "^1.0.0"
    }
}
